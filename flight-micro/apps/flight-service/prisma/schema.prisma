generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum FlightStatus {
  SCHEDULED
  DELAYED
  DEPARTED
  ARRIVED
  CANCELLED
}

enum SeatClass {
  ECONOMY
  BUSINESS
  FIRST_CLASS
}

enum SagaStatus {
  PENDING
  CONFIRMED
  FAILED
}


// =================================================================
// MODELS (ENTITY)
// =================================================================

model Airport {
  id                  String      @id @default(uuid())
  name                String   @db.VarChar(150)
  iataCode            String   @unique @db.VarChar(3)
  icaoCode            String   @unique @db.VarChar(4)
  country             String   @db.VarChar(100)
  city                String   @db.VarChar(100)
  latitude            Decimal  @db.Decimal(10, 8)
  longitude           Decimal  @db.Decimal(11, 8)
  type                String   @db.VarChar(50)
  departureFlights    Flight[] @relation("DepartureAirport")
  arrivalFlights      Flight[] @relation("ArrivalAirport")
  @@index([iataCode])
  @@index([icaoCode])
  @@index([name])
  @@index([city])
}

model Aircraft {
  id                  String   @id @default(uuid())
  name                String   @unique @db.VarChar(50)
  manufacturer        String   @db.VarChar(50)
  flights             Flight[] @relation("Aircraft")
  isDeleted          Boolean  @default(false)
  deletedAt          DateTime?
  @@index([name])
  @@index([manufacturer])
}

model Flight {
  id                    String      @id @default(uuid())
  flightNumber          String      @unique @db.VarChar(10)
  
  departureAirport      Airport     @relation("DepartureAirport", fields: [departureAirportId], references: [id], onDelete: Restrict)
  departureAirportId    String         @map("departure_airport_id")
  
  arrivalAirport        Airport     @relation("ArrivalAirport", fields: [arrivalAirportId], references: [id], onDelete: Restrict)
  arrivalAirportId      String         @map("arrival_airport_id")
  
  departureTime         DateTime
  arrivalTime           DateTime

  estimatedDeparture    DateTime?
  estimatedArrival      DateTime?

  aircraft              Aircraft    @relation("Aircraft", fields: [aircraftId], references: [id], onDelete: Restrict)
  aircraftId            String      @map("aircraft_id")
  
  status                FlightStatus @default(SCHEDULED)
  sagaStatus            SagaStatus     @default(PENDING)
  
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  
  @@index([sagaStatus,departureAirportId])
  @@index([sagaStatus,arrivalAirportId])
  @@index([sagaStatus,flightNumber])
  @@index([sagaStatus,status])
  @@index([sagaStatus,departureTime])
  @@index([sagaStatus,arrivalTime])
}
